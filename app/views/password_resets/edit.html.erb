<% provide(:title, "Reset Password") %>
<h1>Reset Password</h1>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4">
		<%= form_for(@member, url: password_reset_path(params[:id]), html: {class: 'f-vt', autocomplete: "off"}) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
	
			<%= f.password_field :password, placeholder: "password...", autocomplete: :off, value: "" %>

			<%= f.password_field :password_confirmation, placeholder: "enter password again to confirm" %>
	
			<%= f.submit "Update Password", class: "btn btn-primary btn-vt" %>
		<% end %>
	</div>
</div>