<%= form_for( member.relationships.new(parent_id: member.id), html: { class: 'f-hz' } ) do |f| %>

<%= f.hidden_field :parent_id %>
<%= collection_select( :relationship, :child_id, Member.not(member), :id, :name, { prompt: "add a child from the current family members"}, { class: "member_select" }) %>

<%= f.submit "add child", class: "btn btn-sm btn-primary btn-hz" %>

<% end %>
