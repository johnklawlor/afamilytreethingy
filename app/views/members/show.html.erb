<% javascript_include_tag "getComments.js" %>
<% provide(:title, @member.first_name) %>

<div id="images">

	<div id="member_info">

		<div id="profile_image_section">
			<div id="profile_image_holder">
				<%= render partial: 'member_profile_image', object: @member, as: :member %>
			</div>
			<%= render 'hidden_profile_image_upload' if signed_in? && current_member?(current_member) %>
		</div>
	</div>

	<div id="wall">
		<span>
			<div class="post_form">
				<%= render 'posts/post_form' %>
			</div>
		</span>
	</div>
	
	<%= render partial: 'posts/post', collection: @member.posts.order('updated_at DESC') %>
	
	<%= render 'posts/hidden_image_upload' if signed_in? && current_member?(current_member) %>

</div>