<% javascript_include_tag "getComments.js" %>
<% provide(:title, @member.first_name) %>

<div id="images">

<div id="member_info">

	<div id="profile_image_section">
		<div id="profile_image_holder">
			<%= render partial: 'member_profile_image', object: @member, as: :member %>
		</div>
		<%= render 'hidden_profile_image_upload' if signed_in? && current_member?(current_member) %>
	</div>
</div>

<div id="wall">	
	<span>
		<div class="post_form">
			<%= render 'posts/post_form' %>
		</div>
	
		<ul id="posts">
			<%= render partial: 'posts/post', collection: @member.posts.order('created_at DESC') %>
		</ul>
	</span>

</div>
	
	<%= render partial: 'images/image', collection: @member.images.order('created_at DESC') %>
	
	<%= render 'images/hidden_image_upload' if signed_in? && current_member?(current_member) %>

</div>