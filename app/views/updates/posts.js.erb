<% unless @new_posts.empty? %>
	$('#images').attr( 'data-most-recent-post', "<%= @new_posts.first.created_at.to_i %>")
	<% @new_posts.each do |post| %>
		new_post = $("<%= j render partial: 'posts/post', collection: @new_posts, as: :post %>")
		$(".post_form").after( new_post)
	<% end %>
<% end %>
<% if @updates_count == 0 %>
	$("div#updates_count").html("Up")
	$("div#updates_count").attr( 'class', 'no_updates')
<% else %>
	$("div#updates_count").html("+<%= j @updates_count.to_s %>")
	$("div#updates_count").attr( 'class', 'some_updates')
<% end %>

<% unless @new_comments.nil? %>
	<% @new_comments.each do |comment| %>
		$('#image_comments').prepend( "<%= j render partial: 'comments/comment', object: comment %>" )
		$('#post_comments').append( "<%= j render partial: 'comments/comment', object: comment %>" )
	<% end %>
<% end %>