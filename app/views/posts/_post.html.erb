<div class="image_block" id="<%= post.id %>">

	<% if post.image? %>
		<%= link_to image_tag(post.image_url(:medium), class: "member_image img-rounded"), post_path(post) %><br/>
		<div class="over_image tp">
			<%= link_to 'delete', post_path(post), method: :delete, remote: true if current_member?(@member) %>
		</div>
	<% else %>
		<% from_member = Member.find_by_id( post.from_member) %>
		<%= link_to image_tag( from_member.image_url(:thumb), class: 'member_post img-rounded'), member_path( from_member) %>
	
		<div>
			<%= link_to from_member.first_name.downcase, member_path( from_member) %>:
			<%= "#{post.content} -" + time_ago_in_words(post.created_at).to_s + " ago" %>
		</div>
		<% if current_member.can_delete?(post) %>
			<%= link_to "delete", post_path(post), method: :delete, remote: true %>
		<% end %>
	<% end %>
</div>