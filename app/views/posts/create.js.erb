<% if @post.new_record? %>
	alert("Failed to upload image: <%= j @post.errors.full_messages.join(', ').html_safe %>");
<% else %>
	new_post = $("<%= j render @post %>")
	new_post.hide()
	$('div#images').attr('data-most-recent-post', "<%= j @post.created_at.to_i.to_s %>")
	$("#new_post").html(new_post)
	new_post.fadeIn(1000)
	console.log(new_post)
	$('#post_content').val('')
<% end %>