<%= form_for( post.comments.new( member_id: current_member.id), html: {class: 'show_post_comment_form f-hz'}, remote: true) do |f| %>
	<%= f.hidden_field :post_id %>
	<%= f.hidden_field :member_id %>
	<%= f.text_field :content, placeholder: 'enter a comment...', autofocus: true %>
	<%= f.submit "post", class: "btn btn-xs btn-hz" %>
<% end %>